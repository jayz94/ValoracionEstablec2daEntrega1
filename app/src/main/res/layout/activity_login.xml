<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"

    tools:context="proyecto1.pdm.fia.ues.sv.valoracionestablecimientos.LoginActivity">
    <!-- vista para el nombre de la aplicacion-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="105sp"
        android:background="#00BCD4">
        <TextView android:id="@+id/ValEstablec"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:hint="VALORACION DE ESTABLECIMIENTOS"
            android:gravity="center"
            android:textSize="30dip"
            android:elevation="10dp"
            android:textColor="#0b84aa"/>
    </LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="20dip"
    android:orientation="vertical">
    <EditText
        android:id="@+id/editUsuario"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:hint="Usuario"
        android:layout_marginTop="25dp"
        android:nextFocusDown="@+id/editPass"/>

    <EditText android:id="@+id/editPass"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="40dip"
        android:layout_marginBottom="30dip"
        android:nextFocusDown="@+id/btnLogin"/>


    <Button android:id="@+id/btnLogin"
        android:onClick="logear"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Ingresar"
        style="@style/btStyle"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="15dip"
        android:paddingRight="15dip" />

    <TextView android:id="@+id/nota"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="40dip"
        android:text="Ingresa tu usuario y tu clave"
        android:gravity="center"
        android:textSize="20dip"
        android:textColor="#0b84aa"/>

</LinearLayout>


</LinearLayout>
